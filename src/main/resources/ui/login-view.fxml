<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="org.example.peer_chat.ui.controllers.LoginController"
           stylesheets="@../css/login-view.css"
           styleClass="login-root">

    <!-- Layer animation: floating cats/rabbits -->
    <Pane fx:id="floatingLayer" pickOnBounds="false" mouseTransparent="true"/>

    <!-- Layer animation: stars -->
    <Pane fx:id="starLayer" pickOnBounds="false" mouseTransparent="true"/>

    <!-- Card -->
    <VBox styleClass="login-card" alignment="CENTER" spacing="16" maxWidth="420">
        <padding>
            <Insets top="28" right="28" bottom="28" left="28"/>
        </padding>

        <!-- Title -->
        <HBox alignment="CENTER" spacing="10">
            <Label text="CatChatRabbit.App" styleClass="login-title"/>
        </HBox>

        <!-- Cute emojis row -->
        <HBox alignment="CENTER" spacing="14">
            <Label fx:id="catEmoji" text="汾ｱ" styleClass="big-emoji clickable"/>
            <Label fx:id="heartEmoji" text="汳" styleClass="mid-emoji"/>
            <Label fx:id="rabbitEmoji" text="汾ｰ" styleClass="big-emoji clickable"/>
        </HBox>

        <!-- Form -->
        <VBox spacing="12" alignment="CENTER">

            <TextField fx:id="usernameField"
                       promptText="Tﾃｪn ﾄ惰ハg nh蘯ｭp 笨ｨ"
                       styleClass="login-input login-input-username"/>

            <PasswordField fx:id="passwordField"
                           promptText="M蘯ｭt kh蘯ｩu 沐"
                           styleClass="login-input login-input-password"/>



            <Button fx:id="submitBtn"
                    text="汾ｱ ﾄ斉ハg nh蘯ｭp"
                    onAction="#onLogin"
                    styleClass="login-submit"/>

            <Button fx:id="registerBtn"
                    text="汾ｱ ﾄ斉ハg Kys"
                    onAction="#onRegister"
                    styleClass="login-submit"/>

        </VBox>

        <!-- Toggle -->
        <Button fx:id="toggleBtn"
                text="汾ｰ Chﾆｰa cﾃｳ tﾃi kho蘯｣n? ﾄ斉ハg kﾃｽ"
                onAction="#onToggleMode"
                styleClass="login-toggle"/>
    </VBox>

</StackPane>
